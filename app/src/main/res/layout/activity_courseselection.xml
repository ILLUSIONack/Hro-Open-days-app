<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseSelection"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/InformaticaKeuzeImageButton"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/informaticakeuzebutton"
        app:layout_constraintBottom_toTopOf="@+id/TechInformKeuzeImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VoltijdTextview" />

    <ImageButton
        android:id="@+id/TechInformKeuzeImageButton"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/technischeinformaticakeuzebutton"
        app:layout_constraintBottom_toTopOf="@+id/CmdKeuzeImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InformaticaKeuzeImageButton" />

    <ImageButton
        android:id="@+id/CmdKeuzeImageButton"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/cmdkeuzebutton"
        app:layout_constraintBottom_toTopOf="@+id/CommunicatieKeuzeImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TechInformKeuzeImageButton" />

    <ImageButton
        android:id="@+id/CommunicatieKeuzeImageButton"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/communicatiekeuzebutton"
        app:layout_constraintBottom_toTopOf="@+id/DeeltijdTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CmdKeuzeImageButton" />

    <TextView
        android:id="@+id/VoltijdTextview"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="8dp"
        android:background="#cf0245"
        android:text="Voltijd"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/InformaticaKeuzeImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DeeltijdTextView"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:background="#cf0245"
        android:text="Deeltijd"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/DeeltijdInfKeuzeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CommunicatieKeuzeImageButton" />

    <ImageButton
        android:id="@+id/DeeltijdInfKeuzeButton"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/DeeltijdCommKeuzeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeeltijdTextView"
        app:srcCompat="@drawable/informaticakeuzebutton" />

    <ImageButton
        android:id="@+id/DeeltijdCommKeuzeButton"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginBottom="118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeeltijdInfKeuzeButton"
        app:srcCompat="@drawable/communicatiekeuzebutton" />
</android.support.constraint.ConstraintLayout>