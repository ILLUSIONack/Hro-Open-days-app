<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cf0245">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/thumb_button_1"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_min2"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_2"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_min1"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_3"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_1"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_4"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_2"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_5"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_3"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_6"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_4"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_7"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_5"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_8"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_bg"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/thumb_button_9"
                android:layout_width="350dp"
                android:layout_height="135dp"
                android:layout_marginRight="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wijnhaven_99_dak"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>